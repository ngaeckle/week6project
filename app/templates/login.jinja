{% extends "base.jinja" %}

{% block content %}
    <h2>Login Page</h2>
    <form action="" method="post">
    {{form.hidden_tag()}}
    <p>
    {{form.username.label}}<br>
    {{form.username(size=32)}}
    </p>
    <p>
    {{form.password.label}}<br>
    {{form.password(size=32)}}
    </p>
    <p>{{form.remember_me()}} {{form.remember_me.label}}</p>
    <p>
    {{form.submit(class='btn btn-primary')}}
    </p>
    </form>
{%endblock%}