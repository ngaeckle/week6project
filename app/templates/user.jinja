{% extends 'base.jinja '%}

{% block content %}
<h2>{{user.username}} Profile</h2>
<div class="card-deck">
    {%for pokemon in pokedex%}
    <div class="card">
        <img class="card-img-top" src="{{pokemon.get_data()['sprites']['front_default']}}" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">{{pokemon.name.title()}}</h5>
            <p class="card-text">{{pokemon.description}}</p>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">ID: {{pokemon.get_data()['id']}}</li>
            <li class="list-group-item">Weight: {{pokemon.get_data()['weight']}}</li>
            <li class="list-group-item">Height: {{pokemon.get_data()['height']}}</li>
        </ul>
    </div>
</div>

{%endfor%}
</div>
{% endblock %}